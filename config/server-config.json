{
  "server": {
    "name": "enhanced-context-mcp",
    "version": "2.0.0",
    "protocolVersion": "2024-11-05",
    "description": "Enhanced Context MCP Server - Serverless with Project Registry Integration"
  },
  "storage": {
    "mode": "vercel",
    "wamaDirectoryPath": "~/.wama",
    "contextSubdirectory": "contexts",
    "templateSubdirectory": "templates",
    "agentSubdirectory": "agents"
  },
  "security": {
    "enableAuthentication": true,
    "enableRateLimiting": true,
    "maxRequestsPerMinute": 60,
    "maxRequestsPerHour": 1000
  },
  "monitoring": {
    "enableLogging": true,
    "logLevel": "info",
    "enableMetrics": true
  },
  "features": {
    "agentLoading": true,
    "templateLoading": true,
    "projectRulesLoading": true,
    "serviceConfigurationCheck": true,
    "browserTestingSuggestion": true
  }
}
